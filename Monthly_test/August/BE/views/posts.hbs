                        <input type="hidden" name="post_id" value={{this.post._id}}>
                        <input type="hidden" name="post_author" value={{this.post.username}}>
                        <input type="hidden" name="post_body" value='{{this.post.post_body}}'>
                        <table style='width:100%;'>
